<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="div.o_list_buttons" t-operation="append">
            <t t-name="ListView.recoverBtn">
                <button t-if="widget.modelName=='vtp.country.province'"
                        type="button"
                        class="btn btn-primary o_button_sync_province"
                        style="margin-left: 2px !important;">
                    Sync Province
                </button>
                <button t-if="widget.modelName=='vtp.country.district'"
                        type="button"
                        class="btn btn-primary o_button_sync_district"
                        style="margin-left: 2px !important;">
                    Sync District
                </button>
                <button t-if="widget.modelName=='vtp.country.ward'"
                        type="button"
                        class="btn btn-primary o_button_sync_ward"
                        style="margin-left: 2px !important;">
                    Sync Ward
                </button>
                <button t-if="widget.modelName=='viettelpost.office'"
                        type="button"
                        class="btn btn-primary o_button_sync_office"
                        style="margin-left: 2px !important;">
                    Sync Post Office
                </button>
                <button t-if="widget.modelName=='viettelpost.service'"
                        type="button"
                        class="btn btn-primary o_button_sync_service"
                        style="margin-left: 2px !important;">
                    Sync Service
                </button>
                <button t-if="widget.modelName=='viettelpost.service'"
                        type="button"
                        class="btn btn-primary o_button_sync_extend_service"
                        style="margin-left: 2px !important;">
                    Sync Extend Service
                </button>
                <button t-if="widget.modelName=='viettelpost.store'"
                        type="button"
                        class="btn btn-primary o_button_create_store">
                    Create
                </button>
                <button t-if="widget.modelName=='viettelpost.store'"
                        type="button"
                        class="btn btn-primary o_button_sync_store"
                        style="margin-left: 2px !important;">
                    Sync Warehouse
                </button>
            </t>
        </t>
    </t>
</templates>
